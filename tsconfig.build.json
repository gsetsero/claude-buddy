{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override for production build
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false
  },
  
  "include": [
    "src/**/*"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.js"
  ]
}